<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Escalation_Team_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Escalation</label>
        <name>Escalation</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Escalated_Case_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Escalation_Approved_Set_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_Email_to_Lifecycle_Coordinator_for_Escalation</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Escalation_Rejected_set_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_Email_to_Lifecycle_Coordinator_for_Escalation</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Escalation_Rejected_set_to_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Move_status_to_Escalated</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Escalate Case</label>
    <processOrder>5</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
