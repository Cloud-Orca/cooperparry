<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>ffpsai__Account__c</field>
        <field>ffpsai__Override__c</field>
        <field>Approval_Status__c</field>
        <field>pse__Is_Approved__c</field>
        <field>pse__Approver__c</field>
        <field>ffpsai__AutomaticallyPassToAccounting__c</field>
        <field>pse__Billing_Contact__c</field>
        <field>pse__Billing_Event_Batch__c</field>
        <field>pse__Billing_Event_Calculation__c</field>
        <field>ffpsai__BillingEventCurrency__c</field>
        <field>psaws__Billing_Event_Stage__c</field>
        <field>pse__Budget_Remaining__c</field>
        <field>ffpsai__OwnerCompany__c</field>
        <field>CreatedBy</field>
        <field>CurrencyIsoCode</field>
        <field>pse__Customer_Reference__c</field>
        <field>pse__Date__c</field>
        <field>pse__Event_Key__c</field>
        <field>pse__Invoiced__c</field>
        <field>pse__Invoice_Date__c</field>
        <field>pse__Invoice_Number__c</field>
        <field>LastModifiedBy</field>
        <field>pse__Project__c</field>
        <field>pse__Is_Released__c</field>
        <field>pse__Rounded_Summary_Amount__c</field>
        <field>pse__Skip_Sync_Check__c</field>
        <field>pse__Status__c</field>
        <field>pse__Summary_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pse__Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>PM Approval on Billing events</label>
        <name>PM_Approval_on_Billing_events</name>
    </approvalStep>
    <description>Configuring approval workflow on Billing Events if project is flagged as needing manager approval for billing.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>pse__Project__r.Manager_approval_required_for_billing__c &amp;&amp;  ( TEXT(Approval_Status__c) = &apos;Pending&apos; || TEXT(Approval_Status__c) = &apos;Rejected&apos;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Status_to_Approve</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Status_to_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_to_submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval Process for Billing Events</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
