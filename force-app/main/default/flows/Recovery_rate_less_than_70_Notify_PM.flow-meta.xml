        <versionSegment>1</versionSegment>
    </actionCalls>
    <apiVersion>62.0</apiVersion>
    <assignments>
        <name>Add_Recipient_id_into_collection</name>
        <label>Add Recipient id into collection</label>
        <locationX>50</locationX>
        <locationY>539</locationY>
        <assignmentItems>
            <assignToReference>RecipientId</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>$Record.pse__Project_Manager__r.pse__Salesforce_User__c</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Notify_PM_if_recovery_is_less_than_70</targetReference>
        </connector>
    </assignments>
    <decisions>
        <description>Triggers if Actual recovery rate is less than 70% and if the Project manager has a Salesforce User</description>
        <name>Actual_recovery_rate_is_less_than_70</name>
        <label>Actual recovery rate is less than 70%</label>
        <locationX>182</locationX>
        <locationY>323</locationY>
        <defaultConnectorLabel>False and/or no PM or PM has no Salesforce User</defaultConnectorLabel>
        <rules>
            <name>Actual_recovery_rate_is_less_than_70_True</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.CT_Planned_Recovery_Rate__c</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <numberValue>70.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.pse__Project_Type__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Internal</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.pse__Project_Manager__r.pse__Salesforce_User__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Custom_Notification_type_record</targetReference>
            </connector>
            <label>Actual recovery rate is less than 70% - True</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>Actual_recovery_rate_API</name>
        <dataType>Number</dataType>
        <expression>IF({!$Record.pse__Bookings__c} == 0, 0, ({!$Record.CT_Total_Submitted_Hours_Bill_Rate__c} / {!$Record.pse__Bookings__c}) * 100)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>NotificationBody</name>
        <dataType>String</dataType>
        <expression>&apos;Project&apos; + {!$Record.Name} + &apos; has a low recovery rate&apos;</expression>
    </formulas>
    <interviewLabel>Recovery rate less than 70% - Notify PM {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Recovery rate less than 70% - Notify PM</label>
    <processMetadataValues>
